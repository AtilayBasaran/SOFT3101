                        <% if(loginn){ %>
                            <li class="entrance" style="margin-right:20px ;"><a href="/myCart"><i class="fas fa-shopping-cart"> Sepetim</i></a> </li> 
                        <li class="entrance" style="margin-right:20px ; "><a href="/profile">Profilim</a></li>
                        <li class="entrance" style="margin-right:20px ;"><a href="/logout">Çıkış Yap</a></li>
                        <% } else{ %>
                        <li class="entrance" style="margin-right:20px ;"><a href="/login">Giriş Yap</a></li>
                        <li class="entrance" style="margin-right:20px ;"><a href="/register">Üye Ol</a></li>
                        <% } %>

                    </ul>
                </div>
            </div>
        </div>
    </section>

        <section class="mid-part">
            <% if(City.length >0){%>
                <%City.forEach(city => { %>
        <div class="top-part">
            <div class="top-left-part">
                <img src="/<%=city.CityPhoto%>">
            </div>
            <div class="top-right-part">
                <div class="title"><%=city.CityName%></div>
                <div class="description">
                    <p> <%=city.CitySummary%></p>
                </div>
            </div>
        </div>
        <div class="bottom-part">
            <div class="detail">
                <div class="bottom-title">Tarihin Kokusunu Almak İçin Gezilecek Yerler</div>
                <div class="bottom-description">
                    <p> <%=city.HistoryPlaces%></p>
                </div>
            </div>
            <div class="detail">
                <div class="bottom-title">Görsel Şölen Yaşatacak Yerler</div>
                <div class="bottom-description">
                    <p><%=city.BeautyPlaces%></p>
                </div>
            </div>
            <div class="detail">
                <div class="bottom-title">Sanatla Buluşma Noktaları</div>
                <div class="bottom-description">
                    <p><%=city.ArtPlaces%></p>
                </div>
            </div>
            <div class="detail">
                <div class="bottom-title">Nerede Ne Yesek?</div>
                <div class="bottom-description">
                    <p><%=city.EatPlace%></p>
                </div>
            </div>
        </div>
        <% }) %> 
        <% } %> 
    </section>






