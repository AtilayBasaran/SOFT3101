    <link rel="stylesheet" href="footernavbarwotransition.css" />
    <link rel="stylesheet" href="adminPanel.css" />
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.14.0/css/all.min.css"
    />
    <title>Document</title>
  </head>

  <body>
    <section id="header">
      <div class="header container">
        <div class="navbar">
          <div class="logo">
            <a href="/">
              <h1><span>S</span>noll</h1>
            </a>
          </div>
          <div class="searchbar">
            <form method="POST" action="/filterEvent/searchbar">
              <input
                type="search"
                name="EventName"
                placeholder="Etkinlik Ara"
              />
            </form>
          </div>
          <div class="navlist">
            <div class="hb">
              <div class="bar"></div>
            </div>
            <ul>
              <li style="padding: 8px"><a href="/">Anasayfa</a></li>
              <li style="padding: 8px"><a href="/events">Etkinlikler</a></li>
              <li style="padding: 8px"><a href="/category">Kategoriler</a></li>
              <li style="padding: 8px"><a href="/cityguide">Şehir Turu</a></li>
              <li style="padding: 20px"><a href="/aboutus">Hakkımızda</a></li>
              <% if(loginn){ %>
              <li class="entrance" style="margin-right: 20px">
                <a href="/myCart"
                  ><i class="fas fa-shopping-cart"> Sepetim</i></a
                >
              </li>
              <li class="entrance" style="margin-right: 20px">
                <a href="/profile">Profilim</a>
              </li>
              <li class="entrance" style="margin-right: 20px">
                <a href="/logout">Çıkış Yap</a>
              </li>
              <% } else{ %>
              <li class="entrance" style="margin-right: 20px">
                <a href="/login">Giriş Yap</a>
              </li>
              <li class="entrance" style="margin-right: 20px">
                <a href="/register">Üye Ol</a>
              </li>
              <% } %>
            </ul>
          </div>
        </div>
      </div>
    </section>
    <!-- End Header -->

    <!-- Admin Panel -->
    <section id="adminPanel">
      <div class="eventspart">
        <h3 style="font-size: 24px; margin: 10px; color: white">Etkinlikler</h3>
        <form action="/adminPanel/event" method="POST">
          <div class="event-text">
            <div class="event-top">
              <label for="EventNo">EventNo</label>
              <textarea
                id="EventNo"
                name="EventNo"
                rows="4"
                cols="15"
              ></textarea>
            </div>
            <div class="event-top">
              <label for="EventName">EventName</label>
              <textarea
                id="EventName"
                name="EventName"
                rows="4"
                cols="15"
              ></textarea>
            </div>
            <div class="event-top">
              <label for="EventDate">EventDate</label>
              <textarea
                id="EventDate"
                name="EventDate"
                rows="4"
                cols="15"
              ></textarea>
            </div>
            <div class="event-top">
              <label for=",EventPlace">EventPlace</label>
              <textarea
                id="EventPlace"
                name="EventPlace"
                rows="4"
                cols="15"
              ></textarea>
            </div>
            <div class="event-top">
              <label for="EventPrice">EventPrice</label>
              <textarea
                id="EventPrice"
                name="EventPrice"
                rows="4"
                cols="15"
              ></textarea>
            </div>
            <div class="event-top">
              <label for="EventPhotoBackground">Background</label>
              <textarea
                id="EventPhotoBackground"
                name="EventPhotoBackground"
                rows="4"
                cols="15"
              ></textarea>
            </div>
            <div class="event-top">
              <label for="EventPhotoUrl">EventPhotoUrl</label>
              <textarea
                id="EventPhotoUrl"
                name="EventPhotoUrl"
                rows="4"
                cols="15"
              ></textarea>
            </div>
            <div class="event-top">
              <label for="PerformerName">PerformerName</label>
              <textarea
                id="PerformerName"
                name="PerformerName"
                rows="4"
                cols="15"
              ></textarea>
            </div>
            <div class="event-top">
              <label for="EventCategory">EventCategory</label>
              <textarea
                id="EventCategory"
                name="EventCategory"
                rows="4"
                cols="15"
              ></textarea>
            </div>
            <div class="event-top">
              <label for="EventCapacity">EventCapacity</label>
              <textarea
                id="EventCapacity"
                name="EventCapacity"
                rows="4"
                cols="15"
              ></textarea>
            </div>
            <div class="event-top">
              <label for="EventAddress">EventAddress</label>
              <textarea
                id="EventAddress"
                name="EventAddress"
                rows="4"
                cols="15"
              ></textarea>
            </div>
            <div class="event-top">
              <label for="EventCity">EventCity</label>
              <textarea
                id="EventCity"
                name="EventCity"
                rows="4"
                cols="15"
              ></textarea>
            </div>
          </div>
          <div class="buttonpart">
            <a><button class="button" type="submit">Etkinlik Ekle</button></a>
          </div>
        </form>
        <div class="showpart">
          <table style="width: 100%">
            <tr>
              <th>Fonksiyon:Etkinlik Çıkar</th>
              <th>Ekinlik No</th>
            </tr>
            <% if(Events.length >0){%> <%Events.forEach(events => { %>
            <tr>
              <td>
                <a href="/eventdelete/<%=events.EventNo%>">
                  <button class="button">Etkinlik Çıkar</button>
                </a>
              </td>
              <td><%=events.EventName%></td>
            </tr>
            <% }) %> <% } %>
          </table>
        </div>
      </div>
      <div class="userpart">
        <h3 style="font-size: 24px; margin: 10px; color: white">
          Kullanıcılar
        </h3>
        <div class="buttonpart"></div>
        <div class="showpart">
          <table style="width: 100%">
            <tr>
              <th>Fonksiyon:Rol Belirle</th>
              <th>Fonksyion:Kullanıcı Sil</th>
              <th>Kullanıcı Adı</th>
              <th>Kullanıcı Rolü</th>
            </tr>
            <% if(Users.length >0){%> <%Users.forEach(user => { %>
            <tr>
              <td>
                <a href="/setAdmin/<%=user.email%>"
                  ><button class="button" type="submit">Admin Yap</button></a
                >
                <a href="/setOwner/<%=user.email%>"
                  ><button class="button" type="submit">Owner Yap</button></a
                >
                <a href="/setUser/<%=user.email%>"
                  ><button class="button" type="submit">Üye Yap</button></a
                >
              </td>

              <td>
                <a href="/userdelete/<%=user.email%>"
                  ><button class="button" type="submit">
                    Kullanıcıyı Sil
                  </button></a
                >
              </td>
              <td><%=user.email%></td>
              <td><%=user.role%></td>
            </tr>
            <% }) %> <% } %>

            <tr></tr>
          </table>
        </div>
      </div>
      <div class="citypart">
        <h3 style="font-size: 24px; margin: 10px; color: white">Şehirler</h3>
        <form action="/adminPanel/city" method="POST">
          <div class="cities-text">
            <div class="cities-top">
              <label for="CityName">CityName</label>
              <textarea
                id="CityName"
                name="CityName"
                rows="4"
                cols="15"
              ></textarea>
            </div>
            <div class="cities-top">
              <label for="HistoryPlaces">HistoryPlaces</label>
              <textarea
                id="HistoryPlaces"
                name="HistoryPlaces"
                rows="4"
                cols="15"
              ></textarea>
            </div>
            <div class="cities-top">
              <label for="BeautyPlaces">BeautyPlaces</label>
              <textarea
                id="BeautyPlaces"
                name="BeautyPlaces"
                rows="4"
                cols="15"
              ></textarea>
            </div>
            <div class="cities-top">
              <label for="ArtPlaces">ArtPlaces</label>
              <textarea
                id="ArtPlaces"
                name="ArtPlaces"
                rows="4"
                cols="15"
              ></textarea>
            </div>
            <div class="cities-top">
              <label for="EatPlace">EatPlace</label>
              <textarea
                id="EatPlace"
                name="EatPlace"
                rows="4"
                cols="15"
              ></textarea>
            </div>
            <div class="cities-top">
              <label for="CitySummary">CitySummary</label>
              <textarea
                id="CitySummary"
                name="CitySummary"
                rows="4"
                cols="15"
              ></textarea>
            </div>
            <div class="cities-top">
              <label for="CityPhoto">CityPhotoUrl</label>
              <textarea
                id="CityPhoto"
                name="CityPhoto"
                rows="4"
                cols="15"
              ></textarea>
            </div>
          </div>
          <div class="buttonpart">
            <a><button class="button" type="submit">Şehir Ekle</button></a>
          </div>
        </form>
        <div class="showpart">
          <table style="width: 100%">
            <tr>
              <th>Fonksiyon:Şehir Çıkar</th>

              <th>Şehir Adı</th>
            </tr>
            <% if(City.length >0){%> <%City.forEach(city => { %>
            <tr>
              <td>
                <a href="/citydelete/<%=city.CityName%>"
                  ><button class="button" type="submit">Şehir Çıkar</button></a
                >
              </td>

              <td><%=city.CityName%></td>
            </tr>
            <% }) %> <% } %>
          </table>
        </div>
      </div>
    </section>

    <!-- End Admin Panel -->
