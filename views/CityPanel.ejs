                <a href="/logout">Çıkış Yap</a>
              </li>
              <% } else{ %>
              <li class="entrance" style="margin-right: 20px">
                <a href="/login">Giriş Yap</a>
              </li>
              <li class="entrance" style="margin-right: 20px">
                <a href="/register">Üye Ol</a>
              </li>
              <% } %>
            </ul>
          </div>
        </div>
      </div>
    </section>
    <!-- End Header -->

    <!-- Admin Panel -->
    <section id="adminPanel">
      <div class="citypart">
        <h3 style="font-size: 24px; margin: 10px; color: white">Şehirler</h3>
        <form action="/adminPanel/city" method="POST">
          <div class="cities-text">
            <div class="cities-top">
              <label for="CityName">Şehir Adı</label>
              <textarea
                id="CityName"
                name="CityName"
                rows="4"
                cols="15"
              ></textarea>
            </div>
            <div class="cities-top">
              <label for="HistoryPlaces">Tarihi Yerler</label>
              <textarea
                id="HistoryPlaces"
                name="HistoryPlaces"
                rows="4"
                cols="15"
              ></textarea>
            </div>
            <div class="cities-top">
              <label for="BeautyPlaces">Görülmesi Gereken Yerler</label>
              <textarea
                id="BeautyPlaces"
                name="BeautyPlaces"
                rows="4"
                cols="15"
              ></textarea>
            </div>
            <div class="cities-top">
              <label for="ArtPlaces">Müzeler</label>
              <textarea
                id="ArtPlaces"
                name="ArtPlaces"
                rows="4"
                cols="15"
              ></textarea>
            </div>
            <div class="cities-top">
              <label for="EatPlace">Yemek Yenilecek Yerler</label>
              <textarea
                id="EatPlace"
                name="EatPlace"
                rows="4"
                cols="15"
              ></textarea>
            </div>
            <div class="cities-top">
              <label for="CitySummary">Şehir Özeti</label>
              <textarea
                id="CitySummary"
                name="CitySummary"
                rows="4"
                cols="15"
              ></textarea>
            </div>
            <div class="cities-top">
              <label for="CityPhoto">Şehrir Fotoğrafı</label>
              <textarea
                id="CityPhoto"
                name="CityPhoto"
                rows="4"
                cols="15"
              ></textarea>
            </div>
          </div>
          <div class="buttonpart">
            <a><button class="button" type="submit">Şehir Ekle</button></a>
          </div>
        </form>
        <div class="showpart">
          <table style="width: 100%">
            <tr>
              <th>Fonksiyon:Şehir Çıkar</th>

              <th>Şehir Adı</th>
              <th>Tarihi Yerler</th>
            </tr>
            <% if(City.length >0){%> <%City.forEach(city => { %>
            <tr>
              <td>
                <a href="/citydelete/<%=city.CityName%>"
                  ><button class="button" type="submit">Şehir Çıkar</button></a
                >
              </td>

              <td><%=city.CityName%></td>
              <td><%=city.HistoryPlaces%></td>
            </tr>
            <% }) %> <% } %>
          </table>
        </div>
      </div>
    </section>

    <!-- End Admin Panel -->
