    <!-- events Section -->
    <section id="category">
        <div class="category container" >
        <div class="event-part">
            <div class="title">
                <div class="title-icon" style="margin-right: 1%; color: #22395c;">
                    <i class="fas fa-calendar-alt"></i>
                </div>
                <div class="title-text">
                    <p>Etkinlikler</p>
                </div>
            </div>
            <div class="fae">
            <div class="filter">
                <form action="#" method="#" style="border: solid 2px #d2d2d2;
                border-radius: 40px; height: 25rem;">
                <div class="etkinlik-arama">
                <label><b>Etkinlik ara</b></label>
                <input type="text" placeholder="Etkinlik ara">
            </div>
            <div class="tarih-secme">
                <laber><b>Tarih seçiniz</b></laber>
                <input type="date">
            </div>
            <div class="sehir-secme">
                <b>Şehir seçiniz</b>
            <select>
                <label for="city"></label>
                <option>--</option>
                <option>İstanbul</option>
                <option>Denizli</option>
                <option>Sivas</option>
                <option>Kars</option>
                <option>Nevşehir</option>
                <option>İzmir</option>
            </select>
        </div>
        <div class="sehir-secme">
            <b>Kategori seçiniz</b>
            <select>
                <label for="kategori"></label>
                <option>--</option>
                <option>Müzik</option>
                <option>Spor</option>
                <option>Tiyatro</option>
                <option>Teknoloji</option>
            </select>
        </div>
        <br>
            <button type="submit">
                Filtrele
            </button>
            </form>
            </div>
            <div class="events">
                <% if(Events.length >0){%>
                    <%Events.forEach(event => { %>
                <div class="event">
                    <div class="event-image">
                        <a href="/events/<%=event.EventName%>">
                            <img class="img-event" src="./images/manga2.png">
                        </a>
                    </div>
                    <div class="event-text">
                        <a href="/events/<%=event.EventName%>" class="link-text">
                            <p><%=event.EventName%></p>
                        </a>
                    </div>
                </div>
                <% }) %> 
                <% } %> 
    </div>
</div>
    </section>
