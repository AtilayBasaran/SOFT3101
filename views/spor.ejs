<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <base href="/">
    <link rel="stylesheet" href="spor.css">
    <link rel="stylesheet" href="stylee.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.14.0/css/all.min.css">
    <title>Website</title>
</head>

<body>
    <!-- Header -->
    <section id="header">
        <div class="header container">
            <div class="navbar">
                <div class="logo">
                    <a href="/">
                        <h1><span>S</span>noll</h1>
                    </a>
                </div>
                <div class="searchbar">
                    <input type="search" placeholder="Etkinlik Ara">
                </div>
                <div class="navlist">
                    <div class="hb">
                        <div class="bar"></div>
                    </div>
                    <ul>

                        <li style="padding: 8px;"><a href="/">Anasayfa</a></li>
                        <li style="padding: 8px;"><a href="/events">Etkinlikler</a></li>
                        <li style="padding: 8px;"><a href="/category">Kategoriler</a></li>
                        <li style="padding: 8px;"><a href="/cityguide">Şehir Turu</a></li>
                        <li style="padding: 20px;"><a href="/aboutus">Hakkımızda</a></li>
                        <% if(loginn){ %> 
                            <li class="entrance" style="margin-right:20px ;"><a href="/profile">Profilim</a></li>
                            <li class="entrance" style="margin-right:20px ;"><a href="/logout">Çıkış Yap</a></li>
                            <% } else{ %>
                        <li class="entrance" style="margin-right:20px ;"><a href="/login">Giriş Yap</a></li>
                        <li class="entrance" style="margin-right:20px ;"><a href="/register">Üye Ol</a></li>
                        <% } %>
                    </ul>
                </div>
            </div>
        </div>
    </section>
    <!-- End Header -->
    <!-- Category Section -->
    <section id="category">
        <div class="category container">
            <div class="spor-part">
                <div class="title">
                    <div class="title-icon" style="margin-right: 1%; color: #22395c;">
                        <i class="fas fa-calendar-alt"></i>
                    </div>
                    <div class="title-text">
                        <p>Spor Etkinlikleri</p>
                    </div>
                </div>
                <div class="events">
                    <% if(Spor.length >0){%>
                        <%Spor.forEach(events => { %>
                    <div class="event">
                        <div class="event-image">
                            <a href="/events/<%=events.EventName%>">
                                <img class="img-event" src="./<%=events.EventPhotoUrl%>">
                            </a>
                        </div>
                        <div class="event-text">
                            <a href="/events/<%=events.EventName%>" class="link-text">
                                <p><%=events.EventName%></p>
                            </a>
                        </div>
                    </div>
                    <% }) %> 
                    <% } %>  
        </div>
    </div>
</div>
    </section>
